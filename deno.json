{
	"tasks": {
		"dev": "deno run --watch --allow-net --allow-read --allow-write src/main.ts",
		"test": "deno test --allow-read --allow-write --allow-net --allow-run --allow-env --coverage",
		"check": "deno check src/**/*.ts",
		"fmt": "deno fmt",
		"lint": "deno lint"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@std/encoding": "jsr:@std/encoding@^1.0.10",
		"@std/http": "jsr:@std/http@1",
		"@std/path": "jsr:@std/path@1",
		"@std/fs": "jsr:@std/fs@1",
		"@std/crypto": "jsr:@std/crypto@1",
		"@zod/zod": "jsr:@zod/zod@^4.2.1"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"singleQuote": false,
		"proseWrap": "preserve",
		"exclude": ["anarki/", "arc3.2/"]
	},
	"lint": {
		"rules": {
			"tags": ["recommended"]
		}
	},
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true
	}
}
